layout {
    background-color "transparent"

    focus-ring {
        active-color   "#9bcbfb"
        inactive-color "#8c9198"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#9bcbfb"
        inactive-color "#8c9198"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#9bcbfb"
        inactive-color "#8c9198"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#9bcbfb80"
    }
}

recent-windows {
    highlight {
        active-color   "#0f4a73"
        urgent-color   "#ffb4ab"
    }
}